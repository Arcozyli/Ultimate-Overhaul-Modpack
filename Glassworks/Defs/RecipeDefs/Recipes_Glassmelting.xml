<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<RecipeDef>
		<defName>MakeGlass</defName>
		<label>make glass</label>
		<description>Make glass from sand.</description>
		<jobString>Making glass.</jobString>
		<workAmount>800</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Sand</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Sand</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Glass>20</Glass>
		</products>
		<workSkill>Crafting</workSkill>
	</RecipeDef>

	
	<RecipeDef>
		<defName>MakeSafetyGlass</defName>
		<label>make Safety Glass</label>
		<description>Turn some glass into safetyg lass.</description>
		<jobString>Making safety glass.</jobString>
		<workAmount>900</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<recipeUsers>
         <li>TableGlassworks</li>
        </recipeUsers>
		<skillRequirements>
         <li>
            <skill>Crafting</skill>
            <minLevel>8</minLevel>
         </li>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Glass</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Glass</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<SafetyGlass>10</SafetyGlass>
		</products>
		<workSkill>Crafting</workSkill>
		<researchPrerequisite>SafetyGlassResearch</researchPrerequisite>
	</RecipeDef>

</RecipeDefs>