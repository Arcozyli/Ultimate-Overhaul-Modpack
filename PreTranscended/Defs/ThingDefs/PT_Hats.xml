<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="ApparelBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>1</DeteriorationRate>
      <SellPriceFactor>0.05</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <thingCategories>
      <li>ArmorHeadgear</li>
    </thingCategories>
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>



  <ThingDef ParentName="ApparelBase">
    <defName>Apparello_PTAerodynamic</defName>
    <label>transcended aerodynamic visor</label>
    <description>Pre transcended technology.</description>
    <graphicData>
      <texPath>PreAcs/AcsHelm</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>1500</MarketValue>
      <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.53</ArmorRating_Sharp>
      <ArmorRating_Electric>-1</ArmorRating_Electric>
      <Insulation_Heat>10</Insulation_Heat>
      <Insulation_Cold>-10</Insulation_Cold>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.15</SocialImpact>
      <MoveSpeed>-0.02</MoveSpeed>
      <PsychicSensitivity>-0.05</PsychicSensitivity>
      <MentalBreakThreshold>-0.01</MentalBreakThreshold>
      <GlobalLearningFactor>0.02</GlobalLearningFactor>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <worngraphicPath>PreAcs/AcsHelm</worngraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <commonality>1</commonality>
      <tags>
        <li>PreTranny</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>20</weight>
          <only>RGBA(1,1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>








