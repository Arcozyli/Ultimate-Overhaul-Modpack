<Defs>
	
	<HediffDef>
		<defName>Soda</defName>
		<hediffClass>Hediff_Alcohol</hediffClass>
		<label>soda</label>
		<defaultLabelColor>(0,0.5,0.3)</defaultLabelColor>
		<initialSeverity>0.2</initialSeverity>
		<severityPerDay>-0.5</severityPerDay>
		<comps>
			<li>
				<compClass>HediffComp_Effecter</compClass>
				<stateEffecter>Drunk</stateEffecter>
				<severityIndices>
					<min>3</min>
					<max>5</max>
				</severityIndices>
			</li>
		</comps>		
		<stages>
			<li>
				<label>initial-hidden</label>
				<everVisible>false</everVisible>
			</li>
			<li>
				<minSeverity>0.1</minSeverity>
				<label>refreshed</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.05</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef>
    <defName>Syrup</defName>
    <hediffClass>Hediff_Alcohol</hediffClass>
    <label>syrup</label>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <initialSeverity>0.3</initialSeverity>
    <severityPerDay>-0.5</severityPerDay>
    <comps>
      <li>
        <compClass>HediffComp_Effecter</compClass>
        <stateEffecter>Drunk</stateEffecter>
        <severityIndices>
          <min>3</min>
          <max>5</max>
        </severityIndices>
      </li>
    </comps>
      <stages>
        <li>
          <label>initial-hidden</label>
          <everVisible>false</everVisible>
        </li>
        <li>
          <minSeverity>0.3</minSeverity>
          <label>sweetened</label>
		  <vomitMtbDays>8</vomitMtbDays>
        </li>
        <li>
          <minSeverity>0.5</minSeverity>
          <label>jittery</label>
          <vomitMtbDays>3.5</vomitMtbDays>
		  <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <offset>0.10</offset>
              </li>
			  <li>
                <capacity>Manipulation</capacity>
                <offset>-0.1</offset>
              </li>
            </capMods>
        </li>
        <li>
          <minSeverity>0.7</minSeverity>
          <label>hyperglycemic</label>
          <vomitMtbDays>1</vomitMtbDays>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <offset>-0.20</offset>
              </li>
			  <li>
                <capacity>Manipulation</capacity>
                <offset>-0.4</offset>
              </li>
            </capMods>
        </li>
        <li>
          <minSeverity>0.9</minSeverity>
          <label>sugar coma</label>
		  <vomitMtbDays>0.5</vomitMtbDays>
		  <tale>Drunk</tale>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <setMax>0.1</setMax>
              </li>
			  <li>
                <capacity>Manipulation</capacity>
                <offset>-0.7</offset>
              </li>
            </capMods>
        </li>
      </stages>
  </HediffDef>
	
	
