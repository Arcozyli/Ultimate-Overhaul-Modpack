    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.03</MoveSpeed>
      <GiftImpact>0.25</GiftImpact>
      <PsychicSensitivity>-0.05</PsychicSensitivity>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
      </bodyPartGroups>
      <worngraphicPath>Apparel/Mogo/lp</worngraphicPath>
      <layers>
        <li>OnSkin</li>
