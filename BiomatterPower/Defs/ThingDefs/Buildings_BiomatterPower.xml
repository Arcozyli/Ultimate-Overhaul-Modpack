					<exceptedThingDefs>
						<li>Silver</li>
						<li>Gold</li>
						<li>Copper</li>
						<li>CopperBar</li>
						<li>CopperWire</li>
						<li>WeaponParts</li>
						<li>ScrapMetal</li>
						<li>Uranium</li>
						<li>Steel</li>
						<li>SafetyGlass</li>
						<li>SmartMine</li>
						<li>AMRound</li>
						<li>CannonShell</li>
						<li>Rockets</li>
						<li>HeavyMachinegunBullet</li>
						<li>HowitzerShell</li>
						<li>AvengerShell</li>
						<li>TurretEMPGrenades</li>
						<li>Powder</li>
						<li>AvengerShell</li>
						<li>ChainShell</li>
						<li>Plasteel</li>
						<li>RawCotton</li>
						<li>RawDevilstrand</li>
						<li>RawHops</li>
						<li>WoodPlank</li>
						<li>SteelBar</li>
						<li>PlasteelBar</li>
						<li>Glass</li>
						<li>Mulch</li>
						<li>Sand</li>
						<li>Gravel</li>
						<li>Electronics</li>
						<li>EthanolFuel</li>
						<li>ArtilleryShell</li>
 						<li>Kindling</li>
					</exceptedThingDefs>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Important</priority>
				<filter>
					<categories>
						<li>Manufactured</li>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
		<inspectorTabs>
			<li>ITab_Storage</li>
		</inspectorTabs>
		<castEdgeShadows>true</castEdgeShadows>
		<statBases>
			<WorkToMake>450</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<description>Holds resources for the Biomatter generator.</description>
		<costList>
			<SteelBar>15</SteelBar>
		</costList>
		<tickerType>Never</tickerType>
		<rotatable>true</rotatable>
		<neverMultiSelect>true</neverMultiSelect>
		<designationCategory>Power</designationCategory>
		<staticSunShadowHeight>0.2</staticSunShadowHeight>
		<surfaceType>Item</surfaceType>
		<placeWorkers>
			<li>PlaceWorker_NextToHopperAccepter</li>
		</placeWorkers>
		<constructEffect>ConstructMetal</constructEffect>
		<researchPrerequisite>BiomatterPower</researchPrerequisite>
	</ThingDef>
  
  

</Buildings>