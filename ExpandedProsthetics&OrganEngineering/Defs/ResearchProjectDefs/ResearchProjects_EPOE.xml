<ResearchProjectDefs>

<!-- Prostheses -->	

	<ResearchProjectDef>
		<defName>SimpleProsthetics</defName>
		<label>Simple prosthetics</label>
		<description>Advanced anatomy studies and metal testing will allow you to build simple prostheses.</description>
		<totalCost>1500</totalCost>
		<prerequisites>
                <li>CraftingIV</li>
				<li>HospitalBed</li>
              </prerequisites>
	</ResearchProjectDef>
	
	<ResearchProjectDef>
		<defName>Bionics</defName>
		<label>Bionics</label>
		<description>Advanced anatomy studies and metal testing will allow you to build bionic prostheses.</description>
		<totalCost>2000</totalCost>
		<prerequisites>
                <li>SimpleProsthetics</li>
              </prerequisites>
	</ResearchProjectDef>

