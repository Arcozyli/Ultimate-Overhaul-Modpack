<!-- Organs -->	

	<ResearchProjectDef>
		<defName>SurrogateOrgans</defName>
		<label>surrogate organs</label>
		<description>Gaining higher medical knowledge, crafting simple surrogate organs to replace missing ones becomes possible.</description>
		<totalCost>1000</totalCost>
		<prerequisites>
                <li>HospitalBed</li>
              </prerequisites>
	</ResearchProjectDef>
	
	<ResearchProjectDef>
		<defName>SyntheticOrgans</defName>
		<label>synthetic organs</label>
		<description>Further research in nano-technology allows you to create incredibly well-engineered artificial organs.</description>
		<totalCost>2500</totalCost>
              <prerequisites>
                <li>SurrogateOrgans</li>
              </prerequisites>
	</ResearchProjectDef>

