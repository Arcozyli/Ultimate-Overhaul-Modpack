<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="ApparelBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>1</DeteriorationRate>
      <SellPriceFactor>0.15</SellPriceFactor>
    </statBases>
    <thingCategories>
      <li>Eyewear</li>
    </thingCategories>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>
  
  <ThingDef Name="ApparelMakeableBase" ParentName="ApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>TailoringSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
	  <skillRequirements>
		<li>
			<skill>Crafting</skill>
			<minLevel>6</minLevel>
		</li>
	  </skillRequirements>
      <recipeUsers>
        <li>TableTailor</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>


  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Marine_Mask</defName>
    <label>Marine mask</label>
    <description>Military grade eyeware.</description>
    <graphicData>
      <texPath>Accessories/Brimsk/Brimsk</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>8000</WorkToMake>
	  <MarketValue>250</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <ArmorRating_Blunt>0.13</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.05</ArmorRating_Sharp>
      <Insulation_Cold>-4</Insulation_Cold>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Eyes</li>
      </bodyPartGroups>
      <worngraphicPath>Accessories/Brimsk/Brimsk</worngraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <commonality>2</commonality>
      <tags>
        <li>SpecialForcesMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>4</weight>
          <min>RGBA(0.3,0.3,0.3,1)</min>
          <max>RGBA(0.9,0.9,0.9,1)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>




</ThingDefs>