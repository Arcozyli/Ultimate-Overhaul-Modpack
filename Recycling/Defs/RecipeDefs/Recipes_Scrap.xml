	<RecipeDef>
		<defName>MakeScrapTextile</defName>
		<label>make textile strips</label>
		<description>Recycle clothing into strips.</description>
		<jobString>Recycle clothing.</jobString>
		<workAmount>600</workAmount>
		<workSpeedStat>TailoringSpeed</workSpeedStat>
		<effectWorking>Tailor</effectWorking>
		<soundWorking>Recipe_Tailor</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<recipeUsers>
			<li>TableLoom</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Headgear</li>
						<li>Pants</li>
						<li>Shirts</li>
						<li>Gloves</li>
						<li>Feet</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<products>
			<TextileStrips>40</TextileStrips>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>Headgear</li>
				<li>Pants</li>
				<li>Shirts</li>
				<li>Gloves</li>
				<li>Feet</li>
			</categories>
			<exceptedCategories>
				<li>Armor</li>
				<li>Eyewear</li>
			</exceptedCategories>
		</fixedIngredientFilter><!--
		<defaultIngredientFilter>
      <exceptedCategories>
        <li>Armor</li>
      </exceptedCategories>
    </defaultIngredientFilter>-->
		<workSkill>Crafting</workSkill>
	</RecipeDef>
