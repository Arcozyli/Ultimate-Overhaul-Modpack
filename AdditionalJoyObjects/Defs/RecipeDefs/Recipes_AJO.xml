		<jobString>Creating paint sets.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<workAmount>750</workAmount>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RainbowPetals</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>EggsUnfertilized</li>
						<li>EggsFertilized</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodPlank</li>
					</thingDefs>
				</filter>
				<count>6</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WoodPlank</li>
				<li>RainbowPetals</li>
			</thingDefs>
			<categories>
				<li>EggsUnfertilized</li>
				<li>EggsFertilized</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<PaintingSupplies>3</PaintingSupplies>
		</products>
		<skillRequirements>
			<li>
				<skill>Cooking</skill>
				<minLevel>5</minLevel>
			</li>
		</skillRequirements>
		<recipeUsers>
			<li>TableStonecutter</li>
		</recipeUsers>
		<workSkill>Cooking</workSkill>
		<researchPrerequisite>TemperaPainting</researchPrerequisite>
	</RecipeDef>
	
