<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>
	
	<RecipeDef>
		<defName>MakePainting</defName>
		<label>make painting</label>
		<description>Paint a painting.</description>
		<jobString>Painting.</jobString>
		<workAmount>15000</workAmount>
		<workSpeedStat>SculptingSpeed</workSpeedStat>
		<workSkill>Artistic</workSkill>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Cloth</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>PaintingSupplies</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Cloth</li>
				<li>PaintingSupplies</li>
			</thingDefs>
		</fixedIngredientFilter>
		<unfinishedThingDef>UnfinishedPainting</unfinishedThingDef>
		<products>
			<Painting>1</Painting>
		</products>
		<recipeUsers>
			<li>Easel</li>
		</recipeUsers>
	</RecipeDef>
	
	<RecipeDef>
		<defName>CookPaint</defName>
		<label>create paint set</label>
		<description>Create paint by boiling petals of the spectago plant until the gum and pigments bind. Combine with other materials.</description>
		<jobString>Creating paint set.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<workAmount>750</workAmount>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RainbowPetals</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodPlank</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WoodPlank</li>
				<li>RainbowPetals</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<PaintingSupplies>1</PaintingSupplies>
		</products>
		<recipeUsers>
			<li>TableStonecutter</li>
		</recipeUsers>
		<skillRequirements>
			<li>
				<skill>Cooking</skill>
				<minLevel>4</minLevel>
			</li>
		</skillRequirements>
		<workSkill>Cooking</workSkill>
	</RecipeDef>
	
	<RecipeDef>
		<defName>CookTemperaPaint</defName>
