<ThingDefs>

  <ThingDef Name="BaseMeleeWeapon" Abstract="True">
    <category>Item</category>
    <thingClass>ThingWithComps</thingClass>
    <equipmentType>Primary</equipmentType>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <selectable>True</selectable>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
      <SellPriceFactor>0.25</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <techLevel>Medieval</techLevel>
    <weaponTags>
      <li>PirateMelee</li>
    </weaponTags>
    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
      <li>
        <compClass>CompEquippable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li>
        <compClass>CompArt</compClass>
        <nameMaker>NamerMeleeWeapon</nameMaker>
        <descriptionMaker>ArtWeaponMelee</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>TableSmithing</li>
		<li>PrimitiveWeaponCraftingWorkTable</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
    </recipeMaker>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>



  <ThingDef Name="BaseMeleeWeapon_Sharp" ParentName="BaseMeleeWeapon" Abstract="True">
