  <ThingDef ParentName="ApparelBase">
    <defName>Apparello_wassupcap</defName>
    <label>Bicorne</label>
    <description>Awe inspiring hat. Much like a kings with crowns, Only captain with bicornes are acknowledged as real deal.</description>
    <graphicData>
      <texPath>PieHats/Addyhat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
	<MarketValue>110</MarketValue>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Cold>-1</Insulation_Cold>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.25</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <worngraphicPath>PieHats/Addyhat</worngraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <commonality>1</commonality>
      <tags>
        <li>PirateKing</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>4</weight>
          <only>RGBA(1,1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>


