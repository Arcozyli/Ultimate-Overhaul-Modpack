<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

  <RecipeDef>
    <defName>MakeFishingRod</defName>
    <label>Make fishing rod</label>
    <description>Make a fishing rod with some wood, a string and a piece of steel for the hook.</description>
    <jobString>Making fishing rod.</jobString>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>800</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodPlank</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Cloth</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>WoodPlank</li>
        <li>Cloth</li>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <FishingRod>1</FishingRod>
    </products>
    <workSkill>Crafting</workSkill>
  </RecipeDef>

