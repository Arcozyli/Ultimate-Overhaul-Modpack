   <RecipeDef>
	<defName>MakeHardcandy</defName>
	<label>Make Hardcandy</label>
	<description>Turns sugar into a sweet hard candy.</description>
	<jobString>Making candy.</jobString>
	<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
<workAmount>900</workAmount>
    <soundWorking>Recipe_CookMeal</soundWorking>          <allowMixingIngredients>true</allowMixingIngredients>
	<recipeUsers>
         <li>ElectricOven</li>
      </recipeUsers>
	<ingredients>
	  <li>
	    <filter>
	      <thingDefs>
	        <li>Sugar</li>
	      </thingDefs>
	    </filter>
	    <count>10</count>
	  </li>
	</ingredients>
	<fixedIngredientFilter>
	  <thingDefs>
	    <li>Sugar</li>
	  </thingDefs>
	</fixedIngredientFilter>
	<products>
	  <Hardcandy>4</Hardcandy>
	</products>
	<workSkill>Cooking</workSkill>
</RecipeDef>
  
