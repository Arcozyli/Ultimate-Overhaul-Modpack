<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<RecipeDef>
	<defName>CraftFlour</defName>
	<label>Grind flour from wheat</label>
	<description>Grind wheat into flour.</description>
	<jobString>Grinding Flour.</jobString>
	<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
<workAmount>600</workAmount>
    <soundWorking>Recipe_CookMeal</soundWorking>          
	<allowMixingIngredients>true</allowMixingIngredients>
	<recipeUsers>
         <li>StoneMill</li>
      </recipeUsers>
	<ingredients>
	  <li>
	    <filter>
	      <thingDefs>
	        <li>Rawwheat</li>
	      </thingDefs>
	    </filter>
	    <count>10</count>
	  </li>
	</ingredients>
	<fixedIngredientFilter>
	  <thingDefs>
	    <li>Rawwheat</li>
	  </thingDefs>
	</fixedIngredientFilter>
	<products>
	  <Rawflour>10</Rawflour>
	</products>
	<workSkill>Cooking</workSkill>
</RecipeDef>

