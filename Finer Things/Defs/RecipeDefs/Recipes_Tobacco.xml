	<jobString>Rolling Cigarillos.</jobString>
	<workSpeedStat>PlantWorkSpeed</workSpeedStat>
	<effectWorking>ConstructWood</effectWorking>
          <soundWorking>Recipe_Crafting</soundWorking>
          <allowMixingIngredients>true</allowMixingIngredients>
	<workAmount>800</workAmount>
          <targetCountAdjustment>1</targetCountAdjustment>
	<ingredients>
	  <li>
	    <filter>
	      <thingDefs>
	        <li>RawTobacco</li>
	      </thingDefs>
	    </filter>
	    <count>8</count>
	  </li>
	</ingredients>
	<fixedIngredientFilter>
	  <thingDefs>
	    <li>RawTobacco</li>
	  </thingDefs>
	</fixedIngredientFilter>
	<products>
	  <Cigarillos>2</Cigarillos>
	</products>
	<workSkill>Crafting</workSkill>
</RecipeDef>

